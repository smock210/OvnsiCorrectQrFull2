<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ListView
        android:id="@+id/mock_creation"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="10dip"
        android:background="@color/List_backgraund"
        android:cacheColorHint="@color/List_backgraund"
        android:layout_gravity="center_horizontal"
        android:maxLines="7"
        android:layout_weight="1"
        android:scrollbars="vertical"
         />

    <TextView
        android:id="@+id/fullCodeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/testValue" />
    <ListView
        android:id="@+id/construct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"></ListView>
</LinearLayout>
